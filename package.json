{
  "name": "ai-numerology",
  "private": true,
  "workspaces": ["client", "server"],
  "scripts": {
  "install:all": "npm install -w client && npm install -w server",
  "dev": "npm-run-all -p dev:client dev:server",
  "dev:client": "npm -w client run dev",
  "dev:server": "npm -w server run dev",
  "build": "npm-run-all build:client build:server",
  "build:client": "npm -w client run build",
  "build:server": "npm -w server run start",
  "start": "npm -w server run start"
  },
  "devDependencies": { "npm-run-all": "^4.1.5" }
  }